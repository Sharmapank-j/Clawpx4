# Clawpx4 Environment Configuration
# Copy this file to .env and fill in your values

# ── Telegram ─────────────────────────────────────────────────────────────────
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# Comma-separated list of allowed Telegram user IDs (leave empty to allow all)
ALLOWED_USER_IDS=

# ── llama.cpp ─────────────────────────────────────────────────────────────────
# Path to the llama-cli (or llama.cpp main) binary
LLAMA_BINARY=/data/data/com.termux/files/usr/bin/llama-cli
# Path to the GGUF model file
LLAMA_MODEL_PATH=/sdcard/models/model.gguf
# Number of threads to use (tune for your device)
LLAMA_THREADS=4
# Max tokens to generate per response
LLAMA_MAX_TOKENS=512
# Context size (lower = less RAM usage)
LLAMA_CTX_SIZE=2048
# GPU layers offloaded (0 = CPU only, good for low-RAM devices)
LLAMA_GPU_LAYERS=0

# ── Memory ────────────────────────────────────────────────────────────────────
# Path to the SQLite database file
SQLITE_DB_PATH=data/clawpx4.db
# Path to the ChromaDB persistence directory
CHROMA_DB_PATH=data/chroma_db

# ── Security ─────────────────────────────────────────────────────────────────
# Max requests per user per minute (rate limiting)
RATE_LIMIT_RPM=10

# ── Tools ────────────────────────────────────────────────────────────────────
# Enable or disable individual tools (true/false)
TOOL_CALCULATOR_ENABLED=true
TOOL_WEB_SEARCH_ENABLED=true
TOOL_FILE_MANAGER_ENABLED=true
TOOL_SHELL_ENABLED=false

# Allowed base directories for file manager (comma-separated)
FILE_MANAGER_ALLOWED_DIRS=/sdcard/clawpx4_files,/tmp

# Shell command allowlist (comma-separated, only used when TOOL_SHELL_ENABLED=true)
SHELL_ALLOWED_COMMANDS=ls,cat,pwd,echo,date,uname

# ── Scheduler ────────────────────────────────────────────────────────────────
# Timezone for scheduled tasks
SCHEDULER_TIMEZONE=UTC
